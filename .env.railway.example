# ============ Railway Environment Variables ============
# انسخ هذه المتغيرات إلى Railway Dashboard > Variables

# Required - Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHANNEL_ID=-100xxxxxxxxxx

# Required - Security
JWT_SECRET=generate_a_long_random_string_here_min_32_chars
JWT_REFRESH_SECRET=another_long_random_string_here

# Required - Admin
ADMIN_PASSWORD=YourSecurePassword123!

# Environment
NODE_ENV=production
PORT=3000

# Optional - AI (Gemini مجاني)
GEMINI_API_KEY=your_gemini_api_key

# Optional - Email
EMAIL_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional - CORS (اتركه فارغ للسماح لكل الدومينات)
# ALLOWED_ORIGINS=https://your-app.railway.app

{
  "name": "telegram-cloud-storage",
  "version": "1.0.0",
  "description": "نظام تخزين سحابي مجاني باستخدام Telegram",
  "main": "electron/main.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "start": "node server/index.js",
    "build": "cd client && npm install && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:client": "cd client && npm run test",
    "electron:dev": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:start": "electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.9.1",
    "pdf-parse": "^2.4.5",
    "prom-client": "^15.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "telegraf": "^4.15.0",
    "tesseract.js": "^6.0.1",
    "uuid": "^9.0.0",
    "ws": "^8.18.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.telegram.cloudstorage",
    "productName": "التخزين السحابي",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "client/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "uploads",
        "to": "uploads",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "electron/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "electron/icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "electron/icons",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["ar", "en"],
      "language": "1025"
    }
  }
}
